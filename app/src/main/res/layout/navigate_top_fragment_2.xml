<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/secodary_dark_theme"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigate_top_fragment_2"
    tools:context=".ui.top_fragment.TopFragment2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/return_button"
            app:icon="@drawable/ic_baseline_keyboard_arrow_left_40"
            android:padding="0dp"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent"
            android:layout_width="40dp"
            android:backgroundTint="@color/secodary_dark_theme"/>

        <EditText
            android:id="@+id/search_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Pesquisar em todos"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/secodary_dark_theme"
            />

        <!--
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="right"
            app:icon="@drawable/ic_baseline_reorder_64"
            app:iconGravity="top"
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:backgroundTint="@color/secodary_dark_theme"/> -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/searchSomething"
            android:layout_gravity="right"
            app:icon="@drawable/ic_baseline_search_40"
            app:iconGravity="top"
            android:gravity="left"
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:backgroundTint="@color/secodary_dark_theme"/>
    </LinearLayout>

</FrameLayout>