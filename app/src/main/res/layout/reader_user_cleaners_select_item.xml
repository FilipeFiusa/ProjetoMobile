<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:background="@color/secodary_dark_theme"
    android:padding="15dp"
    android:gravity="center_vertical">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/isActive"
        android:layout_width="50dp"
        android:layout_height="30dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/cleaner_name"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:text="Remover hr"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingStart="10dp"/>

    <ImageButton
        android:id="@+id/edit_cleaner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:backgroundTint="@color/secodary_dark_theme"
        android:src="@drawable/ic_mode_edit_white_24dp"/>

    <ImageButton
        android:id="@+id/delete_cleaner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:backgroundTint="@color/secodary_dark_theme"
        android:src="@drawable/ic_baseline_delete_outline_30"/>
</LinearLayout>