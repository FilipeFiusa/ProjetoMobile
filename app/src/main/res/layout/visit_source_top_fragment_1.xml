<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/secodary_dark_theme"
    android:id="@+id/source_top_fragment_1"
    tools:context=".ui.source_top_fragments.TopFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/return_activity_s"
            app:icon="@drawable/ic_baseline_keyboard_arrow_left_40"
            android:padding="0dp"
            android:paddingStart="5dp"
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:backgroundTint="@color/secodary_dark_theme"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="Fonte"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <Button
            app:icon="@drawable/ic_iconmonstr_globe_24"
            android:paddingStart="15dp"
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:backgroundTint="@color/secodary_dark_theme"/>

        <Button
            android:id="@+id/go_to_search_in_source"
            app:icon="@drawable/ic_baseline_search_40"
            android:padding="0dp"
            android:paddingStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:backgroundTint="@color/secodary_dark_theme"/>
    </LinearLayout>

</FrameLayout>