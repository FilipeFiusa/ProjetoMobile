<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/secodary_dark_theme"
    android:id="@+id/source_top_fragment_1"
    tools:context=".ui.source_top_fragments.TopFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/return_activity_s"
            android:background="@drawable/selectable_item_background"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_40"
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/source_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:text="Fonte"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_weight="1"/>


        <ImageButton
            android:background="@drawable/selectable_item_background"
            android:src="@drawable/ic_iconmonstr_globe_24"
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/go_to_search_in_source"
            android:src="@drawable/ic_baseline_search_40"
            android:background="@drawable/selectable_item_background"
            android:layout_width="60dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>