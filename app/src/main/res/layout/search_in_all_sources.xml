<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_dark_theme"
    android:id="@+id/novel_details"
    android:resizeableActivity="true"
    tools:context=".VisitAllSourcesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/secodary_dark_theme"
        >

        <Button
            android:id="@+id/return_activity"
            app:icon="@drawable/ic_baseline_keyboard_arrow_left_40"
            android:padding="0dp"
            android:paddingStart="5dp"
            android:layout_height="70dp"
            android:layout_width="40dp"
            android:backgroundTint="@color/secodary_dark_theme"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="Todas as fontes"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <Button
            app:icon="@drawable/ic_iconmonstr_globe_24"
            android:padding="0dp"
            android:paddingStart="15dp"
            android:layout_height="70dp"
            android:layout_width="50dp"
            android:backgroundTint="@color/secodary_dark_theme"/>
    </LinearLayout>

    <GridView
        android:id="@+id/novelsGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:numColumns="1"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:verticalSpacing="15dp"
        android:horizontalSpacing="25dp"
        android:background="@color/main_dark_theme"/>

</LinearLayout>