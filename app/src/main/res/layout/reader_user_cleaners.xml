<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="center_horizontal"
    android:focusable="true">

    <FrameLayout
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/reader_cleanser_fragment"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@color/secodary_dark_theme">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/secodary_dark_theme"
                    android:orientation="horizontal"
                    android:focusable="true"
                    >

                    <ImageButton
                        android:id="@+id/return_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_baseline_keyboard_arrow_left_40"
                        android:background="@drawable/selectable_item_background"/>

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="Cleaners"/>

                    <ImageButton
                        android:id="@+id/close_reader_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_baseline_close_24"
                        android:background="@drawable/selectable_item_background"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/secodary_dark_theme"
                    android:paddingBottom="50dp"
                    android:paddingTop="10dp"
                    android:focusable="true">

                    <LinearLayout
                        android:id="@+id/any_button"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:background="@drawable/selectable_item_background"
                        android:padding="10dp"
                        android:layout_marginVertical="5dp"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="20dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="Qualquer"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:paddingStart="10dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/specific_button"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:background="@drawable/selectable_item_background"
                        android:padding="10dp"
                        android:layout_marginVertical="5dp"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="20dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="Especifico para a Fonte"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:paddingStart="10dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/novel_specific_button"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:background="@drawable/selectable_item_background"
                        android:padding="10dp"
                        android:layout_marginVertical="5dp"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="20dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="Especifico para esta Novel"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:paddingStart="10dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/secodary_dark_theme">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:textColor="@color/white"

                            android:gravity="center_vertical" />

                        <ImageButton
                            android:id="@+id/add_cleaner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:background="@drawable/selectable_item_background"
                            android:src="@drawable/ic_baseline_add_24"/>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cleaner_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/secodary_dark_theme"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="50dp"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/selectable_item_background"
                            android:padding="10dp"
                            android:layout_marginVertical="10dp"
                            android:gravity="center_vertical"
                            android:layout_marginHorizontal="20dp">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Nome:"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:paddingStart="10dp"/>

                            <EditText
                                android:id="@+id/name_input"
                                android:backgroundTint="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:paddingStart="10dp"
                                android:textColor="@color/white"
                                android:hint="Dê um nome para o seu cleaner"
                                android:textColorHint="#70FFFFFF"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/selectable_item_background"
                            android:padding="10dp"
                            android:layout_marginVertical="10dp"
                            android:gravity="center_vertical"
                            android:layout_marginHorizontal="20dp">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Flag:"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:paddingStart="10dp"/>

                            <EditText
                                android:id="@+id/flag_input"
                                android:backgroundTint="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:paddingStart="10dp"
                                android:textColor="@color/white"
                                android:hint="O que você quer substituir"
                                android:textColorHint="#70FFFFFF"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/selectable_item_background"
                            android:padding="10dp"
                            android:layout_marginVertical="10dp"
                            android:gravity="center_vertical"
                            android:layout_marginHorizontal="20dp">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Substituição:"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:paddingStart="10dp"/>

                            <EditText
                                android:id="@+id/replacement_input"
                                android:backgroundTint="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:paddingStart="10dp"
                                android:textColor="@color/white"
                                android:hint="O que você quer colocar no lugar"
                                android:textColorHint="#70FFFFFF"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:gravity="center">
                            <Button
                                android:id="@+id/create_cleaner"
                                android:backgroundTint="@color/main_dark_theme"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="50dp"
                                android:paddingVertical="10dp"
                                android:text="Criar"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>