<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/secodary_dark_theme"
    android:id="@+id/source_top_fragment_2"
    tools:context=".ui.source_top_fragments.TopFragment2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/return_fragment_s"
            android:background="@drawable/selectable_item_background"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_40"
            android:layout_width="60dp"
            android:layout_height="match_parent" />


        <EditText
            android:id="@+id/novel_search_s"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Pesquisar"
            android:maxLines="1"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/secodary_dark_theme"
            />


        <ImageButton
            android:id="@+id/search_in_source"
            android:background="@drawable/selectable_item_background"
            android:src="@drawable/ic_baseline_search_40"
            android:layout_width="60dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>