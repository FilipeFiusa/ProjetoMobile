<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/secodary_dark_theme"
    android:id="@+id/navigate_top_fragment_1"
    tools:context=".ui.top_fragment.TopFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:text="Navegar"
            android:layout_gravity="start"
            android:textSize="24sp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:layout_width="0dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/goToSearch"
            android:layout_gravity="right"
            app:icon="@drawable/ic_baseline_search_40"
            app:iconGravity="top"
            android:gravity="left"
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:backgroundTint="@color/secodary_dark_theme"/>
    </LinearLayout>

</FrameLayout>