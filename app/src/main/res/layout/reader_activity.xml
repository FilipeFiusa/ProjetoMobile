<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/main_dark_theme">

            <ScrollView
                android:id="@+id/reader_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="beforeDescendants">

                <LinearLayout
                    android:id="@+id/chapter_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    >

                    <TextView
                        android:id="@+id/chapter_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:clickable="false"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="35sp" />


                    <TextView
                        android:id="@+id/chapter_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:clickable="true"
                        android:enabled="true"
                        android:focusable="true"
                        android:longClickable="true"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/test"
                        android:textColor="@color/white"
                        android:textIsSelectable="true"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingTop="30dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="30dp">

                        <Button
                            android:id="@+id/reader_previous"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="30dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/secodary_dark_theme"
                            android:text="Anterior" />

                        <Button
                            android:id="@+id/reader_next"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="30dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/secodary_dark_theme"
                            android:text="Proximo" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/secodary_dark_theme"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingTop="5dp">

            <TextClock
                android:id="@+id/textClock"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/chapter_name_bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Capitulo 1"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/reader_top_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="gone"
        android:background="@color/secodary_dark_theme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/reader_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secodary_dark_theme"
                android:padding="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_40"
                app:tint="@color/white"/>

            <TextView
                android:id="@+id/reader_novel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome da Novel"
                android:textSize="22sp"
                android:maxLines="1"
                android:textColor="@color/white"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/reader_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:visibility="gone"
        android:paddingBottom="45dp"
        android:background="@color/secodary_dark_theme"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/reader_menu_previous"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_15"
                    android:background="@color/secodary_dark_theme" />
                <SeekBar
                    android:id="@+id/novel_progress"
                    android:max="100"
                    android:progress="50"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:progressBackgroundTint="@color/white"
                    />

                <TextView
                    android:id="@+id/reader_seekbar_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="1/2000"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/reader_menu_next"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_15"
                    android:background="@color/secodary_dark_theme" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                android:layout_marginBottom="5dp">

                <ImageButton
                    android:id="@+id/open_chapter_side_menu"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_baseline_chapters"
                    tools:ignore="NestedWeights"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:background="@color/secodary_dark_theme"/>
                <ImageButton
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:foregroundTint="@color/white"
                    android:background="@color/secodary_dark_theme"/>
                <ImageButton
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:foregroundTint="@color/white"
                    android:background="@color/secodary_dark_theme"/>
                <ImageButton
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:foregroundTint="@color/white"
                    android:background="@color/secodary_dark_theme"/>
                <ImageButton
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:foregroundTint="@color/white"
                    android:src="@drawable/ic_outline_more_horiz_40"
                    android:background="@color/secodary_dark_theme"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/reader_side_menu"
        android:layout_width="300dp"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:background="@color/secodary_dark_theme">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/reader_side_menu_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nome da Novel"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reader_menu_recycle_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/secodary_dark_theme"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:paddingStart="25dp"
                    android:text="Opções de Visualização"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_baseline_close_24"
                    android:background="@color/secodary_dark_theme"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/secodary_dark_theme"
                    android:paddingBottom="50dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="Tamanho"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:paddingStart="10dp"/>

                        <Spinner
                            android:background="@drawable/spinner_bg"

                            android:id="@+id/reader_font_size_selector"

                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="15dp"

                            android:spinnerMode="dropdown"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="Fonte"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:paddingStart="10dp"/>

                        <Spinner
                            android:background="@drawable/spinner_bg"

                            android:id="@+id/reader_font_family_selector"

                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="15dp"

                            android:spinnerMode="dropdown"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="Cor da Fonte"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:paddingStart="10dp"/>

                        <LinearLayout
                            android:id="@+id/reader_font_color_selector"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="15dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true">
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="Cor de Fundo"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:paddingStart="10dp"/>

                        <LinearLayout
                            android:id="@+id/reader_bg_color_selector"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="15dp"
                            android:background="@color/main_dark_theme"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true">
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Preview: "
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="30dp"/>

                    <LinearLayout
                        android:id="@+id/background_preview"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="15dp"
                        android:background="@color/main_dark_theme"
                        android:paddingVertical="40dp">

                        <TextView
                            android:id="@+id/text_preview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Esse é o Preview"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingVertical="30dp">

                        <Button
                            android:id="@+id/save_changes_button"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:text="Salvar"
                            android:backgroundTint="@color/main_dark_theme"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>